@{
    ViewData["Title"] = "Información del usuario";
}

<h2 class="info-title">Datos del usuario logueado</h2>
<div class="info-flex-container">
    @if (ViewBag.Foto != null)
    {
        <div class="info-foto-container">
            <img src="/fotos/@ViewBag.Foto" alt="Foto del integrante" class="info-foto" />
        </div>
    }
    @if (ViewBag.Integrante != null)
    {
        <div class="info-datos-box">
            <div><strong>Nombre:</strong> @ViewBag.Integrante.Nombre</div>
            <div><strong>Apellido:</strong> @ViewBag.Integrante.Apellido</div>
            <div><strong>Email:</strong> @ViewBag.Integrante.Email</div>
            <div><strong>Edad:</strong> @ViewBag.Integrante.Edad</div>
        </div>
    }
</div>
<form asp-action="Logout" asp-controller="Home" method="post" class="logout-form">
    <button type="submit" class="logout-btn">Cerrar sesión</button>
</form>
